@page
@model HospiEnCasa.App.Frontend.Pages.Pacientes.DetailsModel
@{
}
<h1>Detalles del Paciente</h1>
<table class="table table-dark">
    <tr>
        <th scope="col">Nombre</th>
        <td>@Model.paciente.Nombre</td>
    </tr>
    <tr>
        <th scope="col">Apellidos</th>
        <td>@Model.paciente.Apellido</td>
    </tr>
    <tr>
        <th scope="col">Teléfono</th>
        <td>@Model.paciente.NumeroTelefono</td>
    </tr>
    <tr>
        <th scope="col">Dirección</th>
        <td>@Model.paciente.Direccion</td>
    </tr>
    <tr>
        <th scope="col">Ciudad</th>
        <td>@Model.paciente.Ciudad</td>
    </tr>
    <tr>
        <th scope="col">Médico</th>
        @if (Model.paciente.Medico == null)
        {
            <td>
                <a class = "btn btn-primary" asp-page = "./AddMedico" asp-route-id = "@Model.paciente.Id">
                    Asignar Médico
                </a>
            </td>
        }
        else
        {
            <td>@Model.paciente.Medico.Nombre</td>
        }
    </tr>                  
    <tr>
        <th scope="col">Signos Vitales</th>
        <td>
            <ul>
                @foreach (var signo in Model.paciente.SignosVitales)
                {
                    <li>@signo.Signo - @signo.Valor</li>
                }
            </ul>    
            <a class = "btn btn-primary" asp-page = "./AddSignoVital" asp-route-id = "@Model.paciente.Id">
                Asignar Signo Vital
            </a>
        </td>
    </tr>                  
</table>
<a class = "btn btn-primary" asp-page = "./Index">Volver</a>