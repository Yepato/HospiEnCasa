@page
@using HospiEnCasa.App.Dominio
@model HospiEnCasa.App.Frontend.Pages.Medicos.EditModel
@{
}
<h1>Editar Médico</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="medico.Id"></label>
        <input asp-for="medico.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="medico.Nombre"></label>
        <input asp-for="medico.Nombre" class="form-control">
        <span asp-validation-for = "medico.Nombre" class = "text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="medico.Apellido"></label>
        <input asp-for="medico.Apellido" class="form-control">
    </div>
    <div class = "form-group">
        <label asp-for = "medico.NumeroTelefono"></label>
        <input asp-for = "medico.NumeroTelefono" class = "form-control">
    </div>
    <div class = "form-group">
        <label asp-for = "medico.Genero"></label>
        <select asp-for = "medico.Genero" asp-items = "Html.GetEnumSelectList<Genero>()" class = "form-control"></select>
    </div>
    <div class = "form-group">
        <label asp-for = "medico.Especialidad"></label>
        <input asp-for = "medico.Especialidad" class = "form-control">
    </div>
    <div class = "form-group">
        <label asp-for = "medico.Codigo"></label>
        <input asp-for = "medico.Codigo" class = "form-control">
    </div>
    <div class = "form-group">
        <label asp-for = "medico.RegistroRethus"></label>
        <input asp-for = "medico.RegistroRethus" class = "form-control">
    </div>
    <br>    
    <button type = "submit" class = "btn btn-primary">Editar Médico</button>      
    <br>
    <br>                 
</form>
<a class = "btn btn-secondary" asp-page = "./Index">Volver</a>